{
  "$schema": "https://json.schemastore.org/package",
  "name": "draw-straws-system",
  "packageManager": "pnpm@8.5.1",
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
  },
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "test": "turbo test:unit",
    "fe": "pnpm --filter frontend",
    "bk": "pnpm --filter backend"
  },
  "lint-staged": {
    "*.{vue,js,jsx,cjs,mjs,ts,tsx,cts,mts}": "eslint --cache --fix",
    "*.src/": "prettier --write",
    "*": ""
  },
  "devDependencies": {
    "@types/node": "^20.2.3",
    "commitlint": "^17.6.3",
    "commitlint-config-gitmoji": "^2.3.1",
    "eslint": "^8.41.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.8",
    "turbo": "^1.9.8",
    "typescript": "^5.0.4"
  }
}
